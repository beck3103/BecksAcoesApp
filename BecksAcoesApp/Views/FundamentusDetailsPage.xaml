<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:BecksAcoesApp.ViewModels"
             xmlns:local="clr-namespace:BecksAcoesApp.Views"
             x:DataType="viewModel:FundamentusDetailsViewModel"
             x:Class="BecksAcoesApp.Views.FundamentusDetailsPage"
             Title="FundamentusDetailsPage">
    <VerticalStackLayout Spacing="10" Padding="20" VerticalOptions="Center" HorizontalOptions="Center">

        <Grid ColumnDefinitions="Auto, *" RowDefinitions="Auto, Auto, Auto" ColumnSpacing="10" RowSpacing="10">
            <Label Grid.Row="0" Grid.Column="0" Text="Ticket:" Style="{StaticResource LabelTitle}" />
            <Label Grid.Row="0" Grid.Column="1" Text="{Binding Papel}" Style="{StaticResource LabelValue}" />

            <Label Grid.Row="1" Grid.Column="0" Text="Cotação Atual:" Style="{StaticResource LabelTitle}" />
            <Label Grid.Row="1" Grid.Column="1" Text="{Binding CotacaoAtual}" Style="{StaticResource LabelValue}" />

            <Label Grid.Row="2" Grid.Column="0" Text="Dividend Yield:" Style="{StaticResource LabelTitle}" />
            <Label Grid.Row="2" Grid.Column="1" Text="{Binding DividendYield}" Style="{StaticResource LabelValue}" />
        </Grid>
    </VerticalStackLayout>
</ContentPage>